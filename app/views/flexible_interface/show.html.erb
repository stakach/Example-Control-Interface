					<select name="projector1-status" id="projector1-status" data-role="slider">
						<option value="off">Off</option>
						<option value="on">On</option>
					</select> 
				</div>
			</div>
			<div class="inputs">
				<div data-role="fieldcontain">
					<label for="screen1-status">Projector Screen:</label>
					<select name="screen1-status" id="screen1-status" data-role="slider">
						<option value="off">Up</option>
						<option value="on">Down</option>
					</select>
				</div>
			</div>
		</div><!-- content -->
	</div><!-- wrapper -->

	<footer data-id="core-footer" data-role="footer" class="wicons" data-position="fixed">
		<nav role="navigation" data-role="navbar" class="wicons">
			<ul>
				<li><a href="#home" class="foot-home" data-icon="custom">Sources</a></li>
				<li><a href="#audio" class="foot-audio" data-icon="custom">Audio</a></li>
				<li><a href="#lights" class="foot-lights" data-icon="custom">Lights</a></li>
				<li><a href="#other" class="foot-other ui-btn-active ui-state-persist" data-icon="custom">Advanced</a></li>
			</ul>
		</nav><!-- navbar -->
	</footer><!-- footer -->
</section><!-- section -->