					<div class="section-label">
						<span>Computer</span>
					</div>
				</div>
				<div class="section">
					<div class="section-label">
						<span>Laptop VGA</span>
					</div>
				</div>
				<div class="section">
					<div class="section-label">
						<span>Laptop DVI</span>
					</div>
				</div>
			</div>
		</div><!-- content -->
	</div><!-- wrapper -->

	<footer data-id="core-footer" data-role="footer" class="wicons">
		<nav role="navigation" data-role="navbar" class="wicons ui-state-persist">
			<ul>
				<li><a href="#home" class="foot-home ui-btn-active ui-state-persist" data-icon="custom">Sources</a></li>
				<li><a href="#audio" class="foot-audio" data-icon="custom">Audio</a></li>
				<li><a href="#other" class="foot-other" data-icon="custom">Advanced</a></li>
			</ul>
		</nav><!-- navbar -->
	</footer><!-- footer -->
</section><!-- section -->

