<section data-role="page" id="audio">
	<header data-role="header" data-position="fixed">
		<h1>Audio</h1>
		<a href="#shutdown" data-icon="delete" class="ui-btn-right" data-rel="dialog" data-transition="slideup">Shutdown</a>
	</header><!-- header -->

	<div class="wrapper" data-role="content">
		<div class="content">
			
			<div id="audio-selection" class="inputs">
				<div class="section-head">
				</div>
				<div class="section">
					<div class="section-box">
						<span>Computer</span>
					</div>
				</div>
				<div class="section">
					<div class="section-box selected">
						<span>VGA</span>
					</div>
				</div>
				<div class="section">
					<div class="section-box">
						<span>DVI</span>
					</div>
				</div>
			</div>
			<div id="volume-wrapper" class="inputs">
				<div data-role="fieldcontain">
					<input data-theme="b" type="range" name="volume" id="volume" value="0" min="0" max="100"  />
					<label for="volume"><h2>Volume</h2></label>
				</div>
			</div>
		</div><!-- content -->
	</div><!-- wrapper -->

	<footer data-id="core-footer" data-role="footer" class="wicons" data-position="fixed">
