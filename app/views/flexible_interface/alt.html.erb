	<div class="wrapper" data-role="content">
		<div class="content">
			<div class="inputs selections">
				<div class="section-head">
				</div>
				<div class="section">
					<div id="hdmi" class="section-box">
						<span><img src="<%= asset_path('flexible_interface/icons/69-display.png') %>" alt="computer" /></span>
					</div>
				</div>
				<div class="section">
					<div id="vga" class="section-box">
						<span><img src="<%= asset_path('flexible_interface/icons/175-macbook.png') %>" alt="laptop vga" /></span>
